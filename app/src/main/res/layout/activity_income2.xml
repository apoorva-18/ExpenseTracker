                android:padding="10dp"
                android:text="@string/hra"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/t2"
                android:layout_width="213dp"
                android:background="@drawable/form_sc_bg"
                android:gravity="center"
                android:textColor="@color/black"
